<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.therickys93.barorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TableActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="it.therickys93.barorder.TABLE_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".StatusActivity" />
        <activity android:name=".OrdersActivity" />
        <activity
            android:name=".PaymentsActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ProductsListActivity" />
        <activity android:name=".QRCodeScannerActivity"></activity>
    </application>

</manifest>